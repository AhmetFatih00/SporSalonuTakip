@{
    ViewData["Title"] = "Yönetici Girişi";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="col-md-5 col-lg-4">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="card-header bg-dark text-white text-center py-4">
                    <div class="mb-2">
                        <span style="font-size: 3rem;">🔐</span>
                    </div>
                    <h3 class="fw-bold mb-0">Yönetici Paneli</h3>
                    <small class="text-white-50">Lütfen kimliğinizi doğrulayın</small>
                </div>

                <div class="card-body p-4 bg-white">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center shadow-sm" role="alert">
                            <span class="me-2">⚠️</span>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form asp-action="Login" method="post">

                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">KULLANICI ADI</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0 text-secondary">👤</span>
                                <input type="text" name="username" class="form-control bg-light border-start-0 text-dark fw-bold"
                                       placeholder="Admin" required autofocus />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">ŞİFRE</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0 text-secondary">🔑</span>
                                <input type="password" name="password" class="form-control bg-light border-start-0 text-dark fw-bold"
                                       placeholder="••••••" required />
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow fw-bold py-3 transition-hover">
                                Giriş Yap
                            </button>
                        </div>

                    </form>
                </div>

                <div class="card-footer bg-light text-center py-3 border-0">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted small">
                        ← Anasayfaya Dön
                    </a>
                </div>

            </div>

            <div class="text-center mt-3">
                <small class="text-white text-shadow">KnudarrFit Gym Security System © 2025</small>
            </div>

        </div>
    </div>
</div>

<style>
    .transition-hover {
        transition: all 0.3s ease;
    }

        .transition-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }

    .text-shadow {
        text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
    }
</style>