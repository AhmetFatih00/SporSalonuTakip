@model SporSalonuTakip.Models.Member

@{
    ViewData["Title"] = "Üyelik Sorgulama";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h4 class="mb-0">🔍 Üyelik Durumu Sorgula</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Index" method="get">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Telefon Numaranız</label>
                            <input type="text" name="phoneNumber" class="form-control form-control-lg text-center"
                                   placeholder="Örn: 5551234567" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Sorgula</button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>

            @if (Model != null)
            {
                <div class="card shadow border-0">
                    <div class="card-header text-white text-center py-3 @(ViewBag.DaysLeft < 0 ? "bg-danger" : "bg-success")">
                        <h3 class="mb-0">
                            @(ViewBag.DaysLeft < 0 ? "⚠️ ÜYELİK SÜRESİ DOLMUŞ" : "✅ ÜYELİK AKTİF")
                        </h3>
                    </div>
                    <div class="card-body text-center p-4">

                        <h2 class="fw-bold mb-1">@Model.FullName</h2>
                        <p class="text-muted">@Model.PlanType Paket</p>

                        <hr />

                        <div class="row mt-4">
                            <div class="col-6 border-end">
                                <small class="text-muted">Başlangıç</small>
                                <h5 class="fw-bold">@Model.StartDate.ToShortDateString()</h5>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Bitiş Tarihi</small>
                                <h5 class="fw-bold">@(((DateTime)ViewBag.EndDate).ToShortDateString())</h5>
                            </div>
                        </div>

                        <div class="mt-4 p-3 rounded bg-light">
                            <small class="text-muted d-block mb-1">Kalan Süre</small>
                            @if (ViewBag.DaysLeft > 0)
                            {
                                <h1 class="display-3 fw-bold text-success">@ViewBag.DaysLeft <span class="fs-4">Gün</span></h1>
                            }
                            else
                            {
                                <h1 class="display-4 fw-bold text-danger">SÜRE BİTTİ</h1>
                                <p class="text-danger">Lütfen üyeliğinizi yenileyiniz.</p>
                                <a asp-controller="Members" asp-action="Plans" class="btn btn-outline-danger mt-2">Yenilemek İçin Tıkla</a>
                            }
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>
</div>