@model IEnumerable<SporSalonuTakip.Models.Member>

@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">⚙️ Yönetim Paneli</h2>
            <p class="text-muted">Üyelerinizi buradan takip edin ve yönetin.</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <span class="fs-5">➕</span> Yeni Üye Ekle
        </a>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-dark text-white py-3">
            <h5 class="mb-0 fw-bold">📋 Kayıtlı Üye Listesi</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Üye Bilgisi</th>
                            <th>Telefon</th>
                            <th>Paket Tipi</th>
                            <th>Ücret</th>
                            <th>Başlangıç</th>
                            <th>Durum</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-3 shadow-sm"
                                             style="width: 45px; height: 45px; font-weight: bold; font-size: 1.2rem;">
                                            @item.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.FullName</div>
                                            <small class="text-muted">ID: #@item.Id</small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span class="text-muted fw-bold">@item.PhoneNumber</span>
                                </td>

                                <td>
                                    @if (item.PlanType.Contains("Gold"))
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3">🌟 @item.PlanType</span>
                                    }
                                    else if (item.PlanType.Contains("3 Aylık"))
                                    {
                                        <span class="badge bg-success rounded-pill px-3">🔥 @item.PlanType</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary rounded-pill px-3">🔹 @item.PlanType</span>
                                    }
                                </td>

                                <td>
                                    <span class="fw-bold text-success">@item.Price ₺</span>
                                </td>

                                <td>
                                    @item.StartDate.ToString("dd MMM yyyy")
                                </td>

                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="d-inline-block rounded-circle bg-success" style="width: 10px; height: 10px;"></span>
                                        <span class="text-success fw-bold ms-1">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="d-inline-block rounded-circle bg-danger" style="width: 10px; height: 10px;"></span>
                                        <span class="text-danger fw-bold ms-1">Pasif</span>
                                    }
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Düzenle">
                                            ✏️
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detay">
                                            📄
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Sil">
                                            🗑️
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center p-5">
                    <h3 class="text-muted">📭 Henüz kayıtlı üye yok.</h3>
                    <p>Yeni üye eklemek için yukarıdaki butonu kullanın.</p>
                </div>
            }
        </div>
    </div>
</div>